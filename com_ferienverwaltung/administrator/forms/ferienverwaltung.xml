<?xml version="1.0" encoding="utf-8"?>
<form addfieldprefix="Ttc\Component\Ferienverwaltung\Administrator\Field">
  <fieldset>
    <field name="id" type="text" readonly="true" class="readonly" default="0" description="JGLOBAL_FIELD_ID_DESC"/>
    <field name="state" default="1" type="list" label="JSTATUS" description="JFIELD_PUBLISHED_DESC" class="inputbox" size="1">
      <option value="1">JPUBLISHED</option>
      <option value="0">JUNPUBLISHED</option>
      <option value="2">JARCHIVED</option>
      <option value="-2">JTRASHED</option>
    </field>
    <field name="ordering"/>
    <field name="checked_out" type="hidden" filter="unset"/>
    <field name="checked_out_time" type="hidden" filter="unset"/>
    <field name="created_by" type="createdby" default="0" label="JGLOBAL_FIELD_CREATED_BY_LABEL" description="JGLOBAL_FIELD_CREATED_BY_DESC" hidden="true" hint="COM_FERIENVERWALTUNG_FORM_LBL_FERIENVERWALTUNG_CREATED_BY"/>
    <field name="modified_by" type="modifiedby" default="0" label="JGLOBAL_FIELD_MODIFIED_BY_LABEL" description="JGLOBAL_FIELD_MODIFIED_BY_DESC" hidden="true" hint="COM_FERIENVERWALTUNG_FORM_LBL_FERIENVERWALTUNG_MODIFIED_BY"/>
    <field name="ferienbeginn" type="calendar" class="inputbox" filter="safehtml" required="true" label="COM_FERIENVERWALTUNG_FORM_LBL_FERIENVERWALTUNG_FERIENBEGINN" description="COM_FERIENVERWALTUNG_FORM_DESC_FERIENVERWALTUNG_FERIENBEGINN" hint="COM_FERIENVERWALTUNG_FORM_LBL_FERIENVERWALTUNG_FERIENBEGINN"/>
    <field name="ferienende" type="calendar" class="inputbox" filter="safehtml" required="true" label="COM_FERIENVERWALTUNG_FORM_LBL_FERIENVERWALTUNG_FERIENENDE" description="COM_FERIENVERWALTUNG_FORM_DESC_FERIENVERWALTUNG_FERIENENDE" hint="COM_FERIENVERWALTUNG_FORM_LBL_FERIENVERWALTUNG_FERIENENDE"/>
    <field name="version_note" type="text" label="JGLOBAL_FIELD_VERSION_NOTE_LABEL" description="JGLOBAL_FIELD_VERSION_NOTE_DESC" class="inputbox" size="45" labelclass="control-label"/>
  </fieldset>
</form>
